<section class="simple-image-text" id="simple-image-text-{{ section.id }}">
  <div class="simple-image-text__inner simple-image-text__inner--{{ section.settings.image_position }}">
    <div class="simple-image-text__media">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: '(min-width: 900px) 50vw, 100vw', widths: [360, 540, 720, 900, 1200, 1500], alt: section.settings.heading | escape }}
      {%- else -%}
        <div class="simple-image-text__placeholder" aria-hidden="true"></div>
      {%- endif -%}
    </div>

    <div class="simple-image-text__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="simple-image-text__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="simple-image-text__text">{{ section.settings.text }}</div>
      {%- endif -%}


      <a class="button simple-image-text__button" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>

    </div>
  </div>
</section>

<style>
  #simple-image-text-{{ section.id }} {
    padding: clamp(24px, 5vw, 64px) 0;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(16px, 3vw, 32px);
    align-items: center;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__inner--image-left {
    grid-template-columns: 1fr;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__inner--image-right {
    grid-template-columns: 1fr;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    display: block;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__placeholder {
    width: 100%;
    padding-top: 62%;
    border-radius: 12px;
    background: repeating-linear-gradient(45deg, #f5f5f5, #f5f5f5 12px, #e9e9e9 12px, #e9e9e9 24px);
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__heading {
    margin: 0 0 12px;
    font-size: clamp(24px, 4vw, 32px);
    line-height: 1.2;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__text {
    margin: 0 0 16px;
    color: #333;
  }

  #simple-image-text-{{ section.id }}
  .simple-image-text__button {
    display: inline-block;
    margin-top: 4px;
  }

  @media (min-width: 900px) {
    #simple-image-text-{{ section.id }} .simple-image-text__inner {
      grid-template-columns: 1.1fr 0.9fr;
    }

    #simple-image-text-{{ section.id }}
    .simple-image-text__inner--image-right {
      grid-template-columns: 0.9fr 1.1fr;
    }

    #simple-image-text-{{ section.id }}
    .simple-image-text__inner--image-right .simple-image-text__media {
      order: 2;
    }

    #simple-image-text-{{ section.id }}
    .simple-image-text__inner--image-right .simple-image-text__content {
      order: 1;
    }
  }
</style>

{% schema %}
  {
    "name": "Simple image with text",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Tell a short story"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Add a short description to give more context and detail to your products.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }, {
        "type": "select",
        "id": "image_position",
        "label": "Image position",
        "default": "image-left",
        "options": [
          {
            "value": "image-left",
            "label": "Image on left"
          }, {
            "value": "image-right",
            "label": "Image on right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Simple image with text"
      }
    ]
  }
{% endschema %}